---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | コミックビューアー</title>
    <link rel="stylesheet" href="/global.css" />
  </head>
  <body>
    <header id="global-header">
      <nav>
        <a href="/">TOP</a>
        <a href="/mangaList">マンガ一覧</a>
        <a href="/tagList">タグ一覧</a>
        <a href="/upload">アップロード</a>
        <a href="/settings">設定</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <style is:global>
      @import "../styles/mainLayout.css";
    </style>
  </body>
</html> 