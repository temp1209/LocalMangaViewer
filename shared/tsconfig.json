{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "allowJs": false,
    "declarationDir": "./dist/dts"
  },
  "include": ["./src"],
  "exclude": ["./dist"]
}